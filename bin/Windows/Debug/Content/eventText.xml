<?xml version="1.0" encoding="utf-8" ?>
<levels>
  <level id ="jail">
    <initial>
      <text speed ="1500" color ="White">You are awake.</text>
      <text speed ="1500" color ="White">It's dark.</text>
      <text speed ="2000" color ="White">You hear a voice slither out of the corner...</text>
      <text speed ="1500" color ="Red">"I have a secret."</text>
      <text speed ="1500" color ="White">You listen closer.</text>
    </initial>
    <timed>
      <text speed ="50000" color ="White">You were a wizard, once.</text>
      <text speed ="1500" color ="White">Not anymore, though.</text>
      <text speed ="1500" color ="White">You swish your finger, but nothing happens.</text>
      <text speed ="1000" color ="White">Magic's all gone.</text>
      <text speed ="50000" color ="White">You kick around the dust a bit.</text>
      <text speed ="1500" color ="White">There's a long wait ahead of you.</text>
      <text speed ="60000" color ="White">It seems without your magic you are useless...</text>
      <text speed ="1500" color ="White">You wish they had covered this in wizard school.</text>
    </timed>
    <event id ="1" type="proximity" command="speak">
      <text speed ="1500" color ="White">"I have a secret, I said.</text>
      <text speed ="1500" color ="White">Your magic has no power here, wizard.</text>
      <text speed ="1500" color ="White">And I know why.</text>
      <text speed ="1500" color ="White">But I won't tell."</text>
      <text speed ="1500" color ="White">You ask yourself, how do you solve things without magic?</text>
      <text speed ="1500" color ="White">Violence, you reason.</text>
      <text speed ="1500" color ="White">The solution is violence.</text>
    </event>
    <event is="2" type="proximity" command="clear">
      <text speed ="1500" color ="White">The door is locked.</text>
    </event>
  </level>
</levels>